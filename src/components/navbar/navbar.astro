---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuIcon } from "astro-navbar";
import ResourgeLogo from "@assets/apple-touch-icon.png";
import { getLibraryFromURL } from "shared/constants/libraries";
const {currentPage} = Astro.props;
const currentPageTitle = getLibraryFromURL(currentPage)

const currentLibraryGithub = currentPageTitle !== '/' ? `https://github.com/resourge/${currentPageTitle}` : 'https://github.com/resourge'
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg flex items-center justify-center">
          <img alt="Resourge Logo" src={ResourgeLogo.src} width="30" height="30">
          <span class="font-bold text-slate-800">Resourge</span>
        </a>
        {currentPageTitle !== '/' ? <span class="bg-black-100text-black-800 text-md font-medium mx-5 px-2.5 py-0.5 rounded border border-gray-200">{currentPageTitle}</span> : null}

        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href={currentLibraryGithub} size="md">Github</Link>
      </div>
    </div>
  </header>
</Container>
