---
import { Badge } from "@/components/ui/badge";
import { buttonVariants } from "@/components/ui/button";
import { siteConfig } from "@/config/site";
import MainLayout from "@/layouts/main-layout.astro";
import { cn } from "@/lib/utils";
import Icon from "astro-icon";
import { mainMenuOfLibraries } from "../lib/consts";

type Collaborator = {
  name: string;
  github: string;
  image: string;
  role: string;
};

const collaborators: Collaborator[] = [
  {
    name: "Jos√© Oliveira",
    github: "https://github.com/josesilvaoliveira",
    image: "https://avatars.githubusercontent.com/u/103932528?v=4",
    role: "Creator/Lead Developer",
  },
  {
    name: "Rafael Pinto",
    github: "https://github.com/archie-rp",
    image: "https://avatars.githubusercontent.com/u/5406135?v=4",
    role: "Developer/Maintainer",
  },
  // Add more collaborators here
];
---

<MainLayout title="Resourge">
  <section class="space-y-6 pb-12 pt-16 lg:py-20">
    <div
      class="container flex max-w-[64rem] flex-col items-center gap-5 text-center"
    >
      <h1
        class="font-heading text-4xl font-bold sm:text-5xl md:text-6xl lg:text-7xl !leading-[1.1] text-balance"
      >
        Simplify your development with
        <span class="text-gradient_indigo-purple"> Resourge</span>
      </h1>

      <div class="flex justify-center space-x-2 md:space-x-4">
        <a
          href={siteConfig.links.github}
          target="_blank"
          rel="noreferrer"
          class={cn(buttonVariants({ variant: "outline", size: "lg" }), "px-4")}
        >
          <Icon name="github" class="mr-2 size-5" />
          Github
        </a>
      </div>
    </div>
  </section>

  <section
    id="features"
    class="container space-y-6 bg-slate-50 py-8 dark:bg-transparent md:py-12 lg:py-6"
  >
    <div
      class="mx-auto flex max-w-[58rem] flex-col items-center space-y-4 text-center"
    >
      <h2 class="font-heading text-2xl leading-[1.1] sm:text-3xl md:text-4xl">
        Packages
      </h2>
    </div>
    <div
      class="mx-auto grid justify-center gap-4 sm:grid-cols-2 md:max-w-[64rem] md:grid-cols-3"
    >
      {
        mainMenuOfLibraries.map((item) => (
          <div class="relative overflow-hidden rounded-lg border bg-background p-2">
            <div class="flex  flex-col justify-between rounded-md p-5">
              <div class="space-y-2">
                <h3 class="font-bold">{item.title}</h3>
                <p class="text-sm text-muted-foreground">{item.description}</p>
                <a
                  href={item.href}
                  rel="noreferrer"
                  class={cn(
                    buttonVariants({ variant: "outline", size: "lg" }),
                    "px-4",
                  )}
                >
                  Get Started
                </a>
              </div>
              <div class="flex gap-2 pt-3">
                {item.support?.map((support) => (
                  <Badge variant="secondary" radius={"full"}>
                    {support}
                  </Badge>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
  <div
    class="container flex max-w-[64rem] flex-col items-center gap-5 text-center"
  >
    <section
      class="container space-y-6 bg-slate-50 py-8 dark:bg-transparent md:py-12 lg:py-6 px:sm-40"
    >
      <span
        class="leading-normal text-muted-foreground sm:text-lg sm:leading-7 balance-text text-center"
      >
        Resourge provides a comprehensive set of packages that streamline the
        development process for complex applications.
      </span>
      <span
        class="leading-normal text-muted-foreground sm:text-lg sm:leading-7 balance-text text-center"
      >
        Whether you need to handle form submissions, validate intricate data
        structures, or offer multilingual support, our packages are designed to
        simplify these tasks and empower developers.
      </span>
    </section>
    <section
      id="collaborators"
      class="container space-y-6 bg-slate-50 py-8 dark:bg-transparent md:py-12 lg:py-6"
    >
      <div class="md:mt-0">
        <h2 class="text-2xl font-semibold text-center">Collaborators</h2>

        <div class="grid grid-cols-2 gap-2 mt-4">
          {
            collaborators.map((collaborator) => (
              <div class="flex flex-col items-center">
                <img
                  src={collaborator.image}
                  alt={collaborator.name}
                  class="w-24 h-24 rounded-full mb-2"
                />
                <span>{collaborator.name}</span>
                <span class="text-sm font-semibold">{collaborator.role}</span>
                <a
                  href={collaborator.github}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  GitHub
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</MainLayout>
